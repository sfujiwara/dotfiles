{
  // VSCode Editor
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "block",
  "editor.fontFamily": "HackGen, Ubuntu mono, Monaco, monospace",
  "editor.fontSize": 16,
  "editor.guides.bracketPairs": true,
  "editor.guides.indentation": true,
  "editor.inlayHints.enabled": "off",
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "all",
  "editor.suggestSelection": "first",
  "editor.wordWrap": "on",
  // VSCode Diff Editor
  "diffEditor.wordWrap": "off",
  // VSCode Terminal
  "terminal.integrated.fontFamily": "HackGen Console NF, Ubuntu mono, monospace",
  "terminal.integrated.fontSize": 16,
  // VSCode Files
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onFocusChange",
  // VSCode Window
  "window.zoomLevel": 1,
  "window.titleBarStyle": "custom",
  "window.customMenuBarAltFocus": false,
  // VSCode Workbench
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.ipynb": "jupyter.notebook.ipynb",
    "*.pdf": "latex-workshop-pdf-hook"
  },
  "workbench.colorTheme": "Cobalt2",
  "workbench.editor.tabSizing": "shrink",
  // Python
  "python.defaultInterpreterPath": "python",
  "python.venvFolders": [],
  "python.interpreter.infoVisibility": "onPythonRelated",
  "python.terminal.activateEnvironment": true,
  "python.terminal.activateEnvInCurrentTerminal": false,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": false
  },
  // Python (Pylance)
  "python.analysis.typeCheckingMode": "off", // "off" or "basic" or "strict"
  // Python (Ruff)
  "ruff.lint.enable": true,
  "ruff.importStrategy": "fromEnvironment",
  "ruff.configuration": "${workspaceFolder}/pyproject.toml",
  "ruff.format.preview": true,
  // "ruff.lint.select": ["ALL"],
  // "ruff.lint.extendSelect": ["ALL"],
  // Go
  "go.toolsManagement.autoUpdate": true,
  // Terraform
  "terraform.codelens.referenceCount": true,
  "terraform.validation.enableEnhancedValidation": true,
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.indentationSize": 2,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file"
  },
  "[terraform-vars]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file"
  },
  // LaTeX
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk",
      "tools": [
        "latexmk"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "%DOC%"
      ]
    }
  ],
  "latex-workshop.formatting.latex": "latexindent",
  "[latex]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  // textlint
  "textlint.languages": [
    "plaintext",
    "markdown",
    "latex"
  ],
  // JavaScript
  "[javascript]": {
    "editor.tabSize": 2
  },
  // Re:VIEW
  "[review]": {
    "editor.insertSpaces": false
  },
  // Coding AI
  "geminicodeassist.inlineSuggestions.enableAuto": false,
  "github.copilot.editor.enableAutoCompletions": true,
  "rust-client.rustupPath": "$HOME/.cargo/bin/rustup",
  "makefile.configureOnOpen": false
}
